<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.hibernate.day01.entity.entity">
    <class name="Street" table="STREET" dynamic-update="true">
        <id name="id" column="ID" length="4">
            <generator class="native"/>
        </id>
        <property name="name" column="NAME" length="50"></property>
        <property name="district_id" column="DISTRICT_ID" length="4"></property>
    </class>

</hibernate-mapping>